{
  "name": "kevins-adventure-game",
  "version": "1.0.0",
  "description": "Kevin's Adventure Game - A text-based adventure game with modern frontend",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && python -m uvicorn api.main:app --reload --port 8000",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd packages/frontend && npm run build",
    "build:backend": "cd packages/backend && echo 'Backend build complete'",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd packages/backend && python -m uvicorn api.main:app --port 8000",
    "start:frontend": "cd packages/frontend && npm start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd packages/frontend && npm test",
    "test:backend": "cd packages/backend && python -m pytest",
    "install:all": "npm install && cd packages/frontend && npm install && cd ../backend && pip install -r requirements.txt"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codegen-sh/Kevin-s-Adventure-Game.git"
  },
  "keywords": [
    "adventure-game",
    "text-based",
    "python",
    "react",
    "monorepo"
  ],
  "author": "Codegen",
  "license": "MIT"
}

